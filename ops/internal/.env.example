##
## ops/internal/.env  — internal hosted services (gryt.chat / docs.gryt.chat / feedback.gryt.chat)
##
## Copy this file to ops/internal/.env and fill in values.
##

# ── Host ports (must be unique) ───────────────────────────────────────────
INTERNAL_SITE_HTTP_PORT=9472
INTERNAL_DOCS_HTTP_PORT=9471

FIDER_HTTP_PORT=9473

# ── Fider ────────────────────────────────────────────────────────────────
FIDER_BASE_URL=https://feedback.gryt.chat

FIDER_DB_USER=fider
FIDER_DB_PASSWORD=replace-me
FIDER_DB_NAME=fider

# Generate with: openssl rand -base64 64
FIDER_JWT_SECRET=replace-me

# ── SMTP (shared with Gryt Auth / Keycloak) ──────────────────────────────
# Postmark server token goes in USER+PASS.
GRYT_SMTP_HOST=smtp.postmarkapp.com
GRYT_SMTP_PORT=587
GRYT_SMTP_FROM=hello@gryt.chat
GRYT_SMTP_USER=replace-me
GRYT_SMTP_PASS=replace-me

# Fider SMTP options
FIDER_EMAIL_SMTP_ENABLE_STARTTLS=true
